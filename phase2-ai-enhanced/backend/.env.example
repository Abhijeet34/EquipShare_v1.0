PORT=5001
MONGODB_URI=mongodb://localhost:27017/equipment-lending
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRE=7d
NODE_ENV=development

# CORS (comma-separated origins). Leave empty to allow all in dev.
CORS_ORIGIN=http://localhost:3000

# Demo Mode - Set to 'true' to show OTP in response (for testing with fake emails)
# NEVER set to 'true' in production with real email addresses
DEMO_MODE=true

# reCAPTCHA Configuration
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key_here
SKIP_RECAPTCHA=false

# Email Service Configuration
# For development/testing: Use Mailtrap (https://mailtrap.io)
# For production: Use Gmail, SendGrid, AWS SES, etc.

# Mailtrap (Development/Testing - recommended)
# Get credentials from: https://mailtrap.io/inboxes
EMAIL_HOST=sandbox.smtp.mailtrap.io
EMAIL_PORT=2525
EMAIL_USER=your_mailtrap_username_here
EMAIL_PASSWORD=your_mailtrap_password_here
EMAIL_FROM="EquipShare Support <noreply@equipshare.com>"

# Gmail (Production - requires App Password)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASSWORD=your-16-char-app-password
# EMAIL_FROM="EquipShare Support <your-email@gmail.com>"

# SendGrid (Production alternative)
# EMAIL_SERVICE=SendGrid
# EMAIL_USER=apikey
# EMAIL_PASSWORD=your_sendgrid_api_key
# EMAIL_FROM="EquipShare Support <noreply@yourdomain.com>"

# Support email address shown in emails and UI
SUPPORT_EMAIL=support@equipshare.com

# Automated Reminder Service
# Cron schedule format: minute hour day month weekday
# Default: '0 9 * * *' = Every day at 9:00 AM
REMINDER_CRON_SCHEDULE=0 9 * * *

# Timezone for cron job (uses server's local timezone if not set)
# Examples: America/New_York, America/Los_Angeles, Europe/London, Asia/Tokyo
# List: https://en.wikipedia.org/wiki/List_of_tz_database_time_zones
# REMINDER_TIMEZONE=America/New_York

# Set to 'true' to run reminders immediately on server startup (for testing)
RUN_REMINDERS_ON_STARTUP=false

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:3000
